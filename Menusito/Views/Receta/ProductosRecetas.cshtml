@model  List<Menusito.Models.ViewModels.ProductoModel>
@{
    ViewBag.Title = "Listado de Productos";
}

<h2>@ViewBag.Title</h2>
<div class="row">
    <div class="col-md-12">
        <table class="table table-responsive table-bordered table-sm">
            <tr>
                <th>#</th>
                <th>Producto</th>
                <th class="center">Opcion</th>
            </tr>
            @foreach (var elemento in Model)
            {
                <tr>
                    <td>@elemento.IdProducto</td>
                    <td>@elemento.Nombre</td>
                    <td class="center">
                        <a class="btn btn-success" href="~/Receta/Index/@elemento.IdProducto"> Crear Receta</a>
                    </td>
                </tr>
            }
        </table>
    </div>
</div>