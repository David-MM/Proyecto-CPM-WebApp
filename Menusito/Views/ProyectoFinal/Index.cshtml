@model List<Menusito.Models.ViewModels.ListaUsuarioModel>
@{
    ViewBag.Title = "Lista de Usuarios";
}

<h2>@ViewBag.Title</h2>
<div class="row" style="text-align:right;padding:5px">
    <a href="~/ProyectoFinal/Agregar" class="btn btn-primary btn-lg glyphicon glyphicon-user"> Agregar</a>
</div>
<div class="row">
    <div class="col-md-12">
        <table class="table">
            <tr>
                <th>#</th>
                <th>Usuario</th>
                <th></th>
            </tr>
            @foreach (var elemento in Model)
            {
                <tr>
                    <td>@elemento.Id</td>
                    <td>@elemento.Usuario</td>
                    <td>
                        <a class="btn btn-warning" href="~/ProyectoFinal/Editar/@elemento.Id">Editar</a>
                        <a class="btn btn-danger" href="~/ProyectoFinal/Eliminar/@elemento.Id">Eliminar</a>
                    </td>
                </tr>
            }
        </table>
    </div>
</div>