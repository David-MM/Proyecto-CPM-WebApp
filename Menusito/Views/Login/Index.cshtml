
@model Menusito.Models.ViewModels.LogiarModel
@{
    ViewBag.Title = Model.mensaje;
    Layout = null;
}

<script src="~/Scripts/bootstrap.js"></script>
<script src="~/Scripts/bootstrap.min.js"></script>
<link href="~/Content/bootstrap.min.css" rel="stylesheet" />
<script src="~/Scripts/jquery.validate.js"></script>
<script src="~/Scripts/jquery-3.3.1.js"></script>
<h2 style="color:darkred; padding-left:5%; padding-top:2%;">@ViewBag.Title</h2>

<div id="login">
    <h1 class="page-header text-center">Autentificación en el sistema</h1>

    <div class="row">
        <div class="col-xs-2"></div>
        <div class="col-xs-8" style="margin-left: 10px;padding-left: 15%;padding-right: 15%;">
            <div class="panel panel-default">
                <div class="panel-heading">Acceso al sistema</div>
                <div class="panel-body">
                    @using (Html.BeginForm("Index", "Login", FormMethod.Post))
                    {
                        <p class="alert alert-info text-center">
                            Escriba el nombre del Usuario y su respectiva contraseña.
                        </p>
                        <div class="form-group">
                            @Html.LabelFor(q => q.Usuario)
                            @Html.TextBoxFor(q => q.Usuario, "Ingrese Usuario", new { @class = "form-control" })
                            @Html.ValidationMessageFor(d => d.Usuario, null, new { @class = "text-danger" })
                        </div>
                        <div class="form-group">
                            @Html.LabelFor(q => q.Password)
                            @Html.PasswordFor(q => q.Password, new { @class = "form-control" })
                            @Html.ValidationMessageFor(d => d.Password, null, new { @class = "text-danger" })
                        </div>
                        <div class="text-right">
                            <button type="submit" class="btn btn-primary">
                                Ingresar
                            </button>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
